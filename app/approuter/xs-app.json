{
  "welcomeFile": "app/index.html",
  "routes": [
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/api/(.*)$",
      "target": "$1",
      "destination": "ecmservice",
      "authenticationType": "xsuaa",
      "csrfProtection": false
    },       
    {
      "source": "^/apinone/(.*)$",
      "target": "$1",
      "destination": "ecmservice",
      "authenticationType": "none",
      "csrfProtection": false
    },       
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "comsapecmreuse",
      "authenticationType": "xsuaa",
      "csrfProtection": false
    },     
    {
      "source": "^/appconfig/",
      "localDir": ".",
      "cacheControl": "no-cache, no-store, must-revalidate"
    },
    {
      "source": "^/srv-api/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "csrfProtection": true
    }
  ]
}
